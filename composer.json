{
    "name": "jeremeamia/func-mocker",
    "type": "library",
    "description": "Allows you to override global function used within a namespace for the purposes of testing.",
    "keywords": [
        "jeremeamia",
        "function",
        "testing",
        "mocking"
    ],
    "homepage": "https://github.com/jeremeamia/php-func-mocker",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeremy Lindblom",
            "email": "jeremeamia@gmail.com",
            "homepage": "https://github.com/jeremeamia",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*|5.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "FuncMocker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FuncMocker\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
